<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@color/colorPrimary">
    <ImageView
            android:layout_width="37dp"
            android:layout_height="39dp" app:srcCompat="@drawable/subicon"
            android:id="@+id/imageView2"
            app:layout_constraintBottom_toTopOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"/>
    <TextView
            android:text="방송 카테고리"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/newCategorySelect" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="게임"
            android:ems="10"
            android:id="@+id/newCategorySelect"
            android:background="@drawable/rounded_rectangle_white" android:textColor="@color/colorAccent"
            android:gravity="center_horizontal|center_vertical"
            android:focusable="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="게임"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/newCategoryPreview"
            android:textColor="@color/colorWhiteTransparent"
            android:textSize="16sp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/newCategoryCompleteBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@null"/>
    <Button
            android:text="확인"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/newCategoryCompleteBtn" android:background="@null"
            android:textColor="@android:color/white" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="60dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />
</android.support.constraint.ConstraintLayout>